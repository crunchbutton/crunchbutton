workingHours.validateHours = function( hours ){
	hours = hours.replace( /\(.*?\)/g, '' );
	segments = hours.split( /(?:and|,)/ );
	for( i in segments ) {
		if( !/^ *(\d+)(?:\:(\d+))? *(am|pm) *(?:to|-) *(\d+)(?:\:(\d+))? *(am|pm) *$/i.exec( segments[ i ] ) ) {
			return false;
		}
	}
	return true;
}

