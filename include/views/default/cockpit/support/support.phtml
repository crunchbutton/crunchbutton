	if( $.trim( id_order ) == '' ){
		return;
	}

	var url = '/support/<?php echo $support->id_support; ?>/link-order';
	$.ajax( {
		type: 'POST',
		dataType: 'json',
		data: { id_order : id_order },
		url: url,
		complete: function( content ) {
			if( content.responseText == 'ok' ){
				location.reload();
			} else {
				alert('Oops! An error ocurred.' );
			}
		}
	} );
}
