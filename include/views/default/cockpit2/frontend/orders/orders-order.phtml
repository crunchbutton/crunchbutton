	<div class="support-boxes">

		<? /* orde details */ ?>
		<div class="support-box-wrap box-content2" ng-if="order.id_order">
			<div class="support-box-wrap-header">
				<h1>Order #{{order.id_order}}</h1>
				<div class="divider"></div>
			</div>

			<div class="no-box-content-color">
				<div class="field-container">
					<div class="field-row">
						<div class="field-key">Pay / Type</div>
						<div class="field-value">{{order.pay_type | capitalize}} / {{order.delivery_type | capitalize}}</div>
					</div>
					<div class="field-row">
						<div class="field-key">Placed At</div>
						<div class="field-value">

							<span ng-if="order.restaurant.timezone != account.user.timezone">
								{{order.date | convertimeformat:order.restaurant.timezone:'MMMM Do YYYY, h:mm:ss a'}}
								&nbsp;(<span class="listview-bold">{{order.date | convertimeformat:order.restaurant.timezone:'z'}}</span>)
								<br>
							</span>
							{{order.date | convertimeformat:account.user.timezone:'MMMM Do YYYY, h:mm:ss a'}}
							&nbsp;(<span class="listview-bold">{{order.date | convertimeformat:account.user.timezone:'z'}}</span>)


							<div ng-if="!order._outsideOf24h" class="listview-smaller">
								(<span am-time-ago="order.date"></span>)
							</div>
						</div>
					</div>
					<div class="field-row">
						<div class="field-key">Status</div>
						<div class="field-value">

							<span ng-if="order.status">

								<span class="tag tag-red" ng-if="order.status.status == 'new'">New</span>
								<span class="tag tag-green" ng-if="order.status.status == 'accepted'">Accepted</span>
								<span class="tag tag-blue" ng-if="order.status.status == 'pickedup'">Pickedup</span>
								<span class="tag tag-purple" ng-if="order.status.status == 'delivered'">Delivered</span>
								<br/>
								<span ng-if="!order.status._outside_of_24h" class="listview-smaller">
									<span am-time-ago="order.status.timestamp*1000"></span>
								</span>
								<span ng-if="order.status._outside_of_24h" class="listview-smaller">
									{{order.status._date_formatted}}
								</span>
							</span>
							<span ng-if="!order.status">{{order.confirmed ? 'Confirmed' : 'Placed'}}</span>
						</div>
					</div>
					<div class="field-row" ng-if="order.pay_type == 'card'">
						<div class="field-key">{{order.processor == 'stripe' ? 'Stripe' : 'Balanced'}}</div>
						<div class="field-value">
							<a ng-if="order.processor == 'balanced'" href="https://dashboard.balancedpayments.com/#/marketplaces/***REMOVED***/debits/{{order.txn}}" target="_blank">{{order.txn}}</a>
							<a ng-if="order.processor == 'stripe'" href="https://dashboard.stripe.com/payments/{{order.txn}}" target="_blank">{{order.txn}}</a>
						</div>
					</div>
					<div class="field-row">
						<div class="field-key">User Agent</div>
						<div class="field-value">
							{{order.agent}}
						</div>
					</div>
					<div class="field-row" ng-if="order.status.status != 'delivered' && eta.time">
						<div class="field-key">ETA</div>
						<div class="field-value">
							{{eta.time | formatPrice}} minutes
						</div>
					</div>
					<div class="field-row" ng-if="order.refunded">
						<div class="field-key">Refunded</div>
						<div class="field-value">
							<span class="tag tag-green">Yes</span>
						</div>
					</div>
					<div ng-if="order.delivery_service && order.refunded" class="field-row link no-underline" ng-click="do_not_reimburse_driver()">
						<div class="field-key">
							Do Not Reimburse Driver?
						</div>
						<div class="field-value">
							<i ng-if="!order.do_not_reimburse_driver" class="fa fa-square-o"></i>
							<i ng-if="order.do_not_reimburse_driver" class="fa fa-check-square-o"></i>
						</div>
					</div>

					<div ng-if="order.delivery_service && order.refunded" class="field-row link no-underline" ng-click="do_not_pay_driver()">
						<div class="field-key">
							Do Not Pay Driver?
						</div>
						<div class="field-value">
							<i ng-if="!order.do_not_pay_driver" class="fa fa-square-o"></i>
							<i ng-if="order.do_not_pay_driver" class="fa fa-check-square-o"></i>
						</div>
					</div>
					<div class="field-row link no-underline" ng-click="do_not_pay_restaurant()" ng-if="order.refunded">
						<div class="field-key">
							Pay restaurant despite refund <br>(e.g. this refund was our fault)
						</div>
						<div class="field-value">
							<i ng-if="!order.do_not_pay_restaurant" class="fa fa-square-o"></i>
							<i ng-if="order.do_not_pay_restaurant" class="fa fa-check-square-o"></i>
						</div>
					</div>


				</div>

				<br><br>
				<div class="quadruple-cols">
					<button class="button button-empty button-border button-orange" ng-if="order.user.id_user" ng-class="{'button-disabled': isRefunding || order.refunded}" ng-click="refund()"><i class="fa fa-heart"></i>&nbsp;&nbsp;Refund</button>
					<button ng-click="resend_notification_drivers();" class="button button-empty button-border button-green" ng-class="{'button-disabled': isDriverNotifying || !order.delivery_service || (order.delivery_service && (order.status.status != 'new' || order.status.status != 'rejected'))}"><i class="fa fa-car"></i>&nbsp;&nbsp;Notify</button>
					<button ng-click="resend_notification();" class="button button-empty button-border button-blue" ng-class="{'button-disabled': isRestaurantNotifying || order.confirmed || (order.restaurant.delivery_service && !order.restaurant.formal_relationship && !order.restaurantorder_notifications_sent)}"><i class="fa fa-coffee"></i>&nbsp;&nbsp;Notify</button>
					<button ng-click="creditDialog( order.id_user );" class="button button-empty button-border button-orange"><i class="fa fa-gift"></i>&nbsp;&nbsp;Gift Card</button>
				</div>

			</div>
		</div>

		<? /* delivery status */ ?>
		<div class="support-box-wrap box-content2" ng-if="order.status">
			<div class="support-box-wrap-header">
				<h1>Delivery Status</h1>
				<div class="support-box-header-actions-wrap">
					<div class="support-box-header-actions">
						<a href="" ng-click="changeOrderStatus()"><button class="button button-small button-empty button-green"><i class="fa fa-cog"></i>&nbsp;&nbsp;Update</button></a>
					</div>
				</div>
				<div class="divider"></div>
			</div>

			<div class="no-box-content-color" ng-if="order.actions.length">
