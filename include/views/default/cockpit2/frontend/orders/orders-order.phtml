					<tr>
						<td class="topitem itemprice tb-small">Status</td>
						<td class="topitem itemname">Driver</td>
						<td class="topitem order-contents-item-qty">Time</td>
					</tr>
					<tr ng-repeat="action in order.actions" title="{{action.note}}">
						<td class="fooditem dish-name tb-small tb-v-center" nowrap="nowrap">
							<span class="tag tag-red no-wrap" ng-if="action.type == 'delivery-text-5min'">Texted 5 min away</span>
							<span class="tag tag-red no-wrap" ng-if="action.type == 'delivery-rejected'">Rejected</span>
							<span class="tag tag-green no-wrap" ng-if="action.type == 'delivery-accepted'">Accepted</span>
							<span class="tag tag-blue no-wrap" ng-if="action.type == 'delivery-pickedup'">Pickedup</span>
							<span class="tag tag-purple no-wrap" ng-if="action.type == 'delivery-delivered'">Delivered</span>
						</td>
						<td class="fooditem dish-name">
							<a href="/staff/{{action.admin.login}}">{{action.admin.name}}</a><br>
							<a href ng-click="callText(action.admin.phone)" class="listview-smaller">{{action.admin.phone | formatPhone}}</a>
						</td>
						<td class="fooditem dish-name" nowrap="nowrap">
							<span ng-if="order.restaurant.timezone != account.user.timezone">
								{{action.date | convertimeformat:order.restaurant.timezone:'h:mm:ss a'}}
								&nbsp;(<span class="listview-bold">{{order.date | convertimeformat:order.restaurant.timezone:'z'}}</span>)
								<br>
							</span>
								{{action.date | convertimeformat:account.user.timezone:'h:mm:ss a'}}
							&nbsp;(<span class="listview-bold">{{order.date | convertimeformat:account.user.timezone:'z'}}</span>)
						</td>
					</tr>
					<tr><td>	</td></tr>
				</table>
			</div>
		</div>

		<? /* contents */ ?>
		<div class="support-box-wrap box-content2" ng-if="order.user.id_user">
			<div class="support-box-wrap-header">
				<h1>Contents</h1>
				<div class="divider"></div>
			</div>

			<div class="no-box-content-color">
				<table align="right" class="basic-table detail">
					<tr>
						<td class="topitem order-contents-item-qty">Qty</td>
						<td class="topitem itemname">Item</td>
						<td class="topitem itemname"></td>
						<td class="topitem itemprice">Store Price</td>
					</tr>
					<tr ng-repeat="dish in order._dishes_qty">
						<td class="fooditem order-contents-item-qty" ng-class="{'order-contents-item-qty-highlight': dish.quantity > 1 }">{{dish.quantity}}</td>
						<td class="fooditem dish-name">
							<b>{{dish.name}}</b>
							<div>{{dish.options.select_options}}</div>
							<div>{{dish.options.with_option}}</div>
							<div>{{dish.options.without_default_options}}</div>
						</td>
						<td class="fooditem dish-price-unity">
							<span ng-if="dish.quantity > 1">
								{{dish.quantity}} * ${{dish.price.regular_unity | formatPrice}}
							</span>
						</td>
						<td class="fooditem dish-price">
							${{dish.price.regular | formatPrice}}
						</td>
					</tr>
					<tr><td><br></td></tr>
					<tr class="listview-smaller"><td></td><td colspan="2" style="text-align: right">Subtotal:</td><td nowrap class="dish-price">${{order.price | number:2}}</td></tr>
					<tr class="listview-smaller"><td></td><td colspan="2" style="text-align: right">Markup:</td><td nowrap class="dish-price">${{order.delivery_service_markup_value || 0 | number:2}} ({{order.delivery_service_markup || 0}}%)</td></tr>
					<tr class="listview-smaller"><td></td><td colspan="2" style="text-align: right">Service Fee:</td><td nowrap class="dish-price">${{order.price * (order.service_fee/100) | number:2}} ({{order.service_fee || 0}}%)</td></tr>
					<tr class="listview-smaller"><td></td><td colspan="2" style="text-align: right">Delivery Fee:</td><td nowrap class="dish-price">${{order.delivery_fee || 0 | number:2}}</td></tr>
					<tr class="listview-smaller"><td></td><td colspan="2" style="text-align: right">Tax:</td><td nowrap class="dish-price">${{order.price * (order.tax/100) | number:2}} ({{order.tax}}%)</td></tr>
					<tr class="listview-smaller"><td></td><td colspan="2" style="text-align: right">Tip:</td><td nowrap class="dish-price">${{order._tip || 0 | number:2}} ({{order._tip/order.price*100}}%)</td></tr>
					<tr class="listview-smaller"><td></td><td colspan="2" class="listview-bold" style="text-align: right">Total:</td><td class="listview-bold " nowrap>${{order.final_price_plus_delivery_markup | number:2}}</td></tr>
				</table>


			</div>
		</div>

