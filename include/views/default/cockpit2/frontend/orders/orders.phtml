<div class="top-pad"></div>

<div class="content-padding">
	<h1 class="title left"><i class="fa fa-car"></i>Orders</h1>
	<div class="box-filter" ng-show="regularList">
		<button class="button orange" ng-class="{ 'inactive' : query.view=='list' }" ng-click="query.view = 'map'">Map</button>
		<button class="button orange" ng-class="{ 'inactive' : query.view=='map' }" ng-click="query.view = 'list'">List</button>
	</div>
	<div class="divider"></div>

	<div class="box-content2 box-content-table">
		<table>
			<tr>
				<td colspan="8"><i class="fa fa-search"></i>&nbsp;&nbsp;<input type="text" ng-model="query.search" id="search" tabindex="1"></td>
				<td><i title="More options" class="fa fa-search-plus link no-underline" ng-class="{'orange':show_more_options}" ng-click="moreOptions()"></i></td>
			</tr>
			<tr ng-if="show_more_options">
				<th>Start</th>
				<td>
					<input type="date" ng-model="query.datestart" tabindex="2">
				</td>
				<th>End</th>
				<td>
					<input type="date" ng-model="query.dateend" tabindex="3">
				</td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
			<tr ng-if="show_more_options && showSearchByPlaces">
				<th>Restaurant</th>
				<td>
					<ui-select ng-model="query.restaurant" theme="select2" close-on-select="true" style="width: 200px;" title="Select a restaurant">
						<ui-select-match placeholder="Select a restaurant">{{$select.selected.name}}</ui-select-match>
						<ui-select-choices repeat="restaurant.id_restaurant as restaurant in restaurants | propsFilter: {name: $select.search}">
							{{restaurant.name}}
						</ui-select-choices>
					</ui-select>
					<a ng-show="query.restaurant" ng-click="query.restaurant=null" href=""><button class="button button-small button-empty button-green"><i class="fa fa-trash-o"></i></button></a>
				</td>
				<th>Community</th>
				<td>
					<ui-select ng-model="query.community" theme="select2" close-on-select="true" style="width: 200px;" title="Select a community">
						<ui-select-match placeholder="Select a community">{{$select.selected.name}}</ui-select-match>
						<ui-select-choices repeat="community.id_community as community in communities | propsFilter: {name: $select.search}">
							{{community.name}}
						</ui-select-choices>
					</ui-select>
					<a ng-show="query.community" ng-click="query.community=null" href=""><button class="button button-small button-empty button-green"><i class="fa fa-trash-o"></i></button></a>
				</td>
				<th>Driver</th>
				<td>
					<ui-select ng-model="query.driver" theme="select2" close-on-select="true" style="width: 200px;" title="Select a driver">
						<ui-select-match placeholder="Select a driver">{{$select.selected.name}}</ui-select-match>
						<ui-select-choices repeat="driver.id_admin as driver in drivers | propsFilter: {name: $select.search}">
							{{driver.name}}
						</ui-select-choices>
					</ui-select>
					<a ng-show="query.driver" ng-click="query.driver=null" href=""><button class="button button-small button-empty button-green"><i class="fa fa-trash-o"></i></button></a>
				</td>
				<th>Orders displayed</th>
				<td>
					<select ng-model="query.limit" ng-options="limit.value as limit.label for limit in limits"></select>
				</td>
				<td>
					<a href="" ng-click="exports()"><button class="button button-small button-empty button-green"><i class="fa fa-download"></i>&nbsp;&nbsp;Export</button></a>
				</td>
			</tr>
		</table>
	</div>

	<div class="bar-loader bar-loader-search" ng-class="{'bar-loader-loading': loading}"></div>

	<ng-include src="'assets/view/listview-campus-manager-orders.html'" ng-show="query.view=='list' && campusManagerList"></ng-include>
	<ng-include src="'assets/view/listview-orders.html'" ng-show="query.view=='list' && regularList"></ng-include>
	<ng-include src="'assets/view/listview-paging.html'" ng-show="query.view=='list'"></ng-include>

	<ng-include src="'assets/view/mapview-orders.html'" ng-show="query.view=='map'"></ng-include>
</div>
