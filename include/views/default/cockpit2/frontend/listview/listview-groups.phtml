<div class="box-content2 box-content-table">
	<table class="tb-zebra">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Type</th>
			<th>Community</th>
			<th>Members</th>
			<th class="tb-small"></th>
		</tr>
		<tr ng-repeat="group in groups track by $index" ng-attr-tabindex="{{$index+1}}" tab-select="/group/{{group.permalink || group.id_group}}">
			<td nowrap>
				<span class="listview-bold">{{group.name}}</span>
			</td>
			<td><span class="listview-smaller">{{group.description}}</span></td>
			<td>
				<span class="tag tag-orange" ng-if="group.type == 'driver'">Driver</span>
				<span class="tag tag-purple" ng-if="group.type == 'marketing-rep'">Marketing</span>
				<span class="tag tag-grey" ng-if="!group.type">Group</span>
			</td>
			<td><a href="/community/{{group.id_community}}">{{group.community}}</a></td>
			<td class="tb-center">{{group.members}}</td>
			<td nowrap class="tb-v-center">
				<a href="/permission/group/{{group.name}}"><button class="button button-small button-empty button-green"><i class="fa fa-unlock-alt"></i>&nbsp;&nbsp;Permissions</button></a>
				<a href="/group/edit/{{group.name}}"><button class="button button-small button-empty button-green"><i class="fa fa-pencil"></i>&nbsp;&nbsp;Edit</button></a>
				<a href="/group/{{group.name}}"><button class="button button-small button-empty button-green"><i class="fa fa-eye"></i>&nbsp;&nbsp;View</button></a>
			</td>
		</tr>
	</table>
</div>