<div class="box-content2 box-content-table">
	<table class="tb-zebra">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Permalink</th>
			<th>Timezone</th>
			<th>Last Order</th>
			<th>Map Orders</th>
			<th class="tb-center">Restaurants</th>
			<th>Active</th>
			<th></th>
		</tr>
		<tr ng-repeat="community in communities track by $index" ng-attr-tabindex="{{$index+1}}" tab-select="/community/{{community.permalink || community.id_community}}">
			<td><a href="/community/{{community.permalink || community.id_community}}">{{community.id_community}}</td>
			<td>{{community.name}}</td>
			<td>{{community.permalink}}</td>
			<td>{{community.timezone | formatTimezone}}</td>
			<td>
				<span ng-if="community._order_date"><span am-time-ago="community._order_date | localtime | timestamp"></span></span>
			</td>
			<td>
				<a href="/orders?limit=100&page=1&search=&restaurant=&community={{community.id_community}}&date=&view=map">
				Last 100 orders
				</a>
			</td>
			<td class="tb-center"><a href="/restaurants?community={{community.id_community}}">{{community.restaurants}}</a></td>
			<td><i class="fa fa-check" ng-if="community.active"></i></td>
			<td class="tb-center"><a href="/community/edit/{{community.permalink}}">Edit</a></td>
		</tr>
	</table>
</div>