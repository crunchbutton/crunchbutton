<div class="top-pad"></div>

<div class="content-padding">
	
	<div class="support-boxes">
	
		<div class="support-box-wrap box-content2">
			<div class="support-box-wrap-header">
				<h1><i class="fa fa-user"></i>Profile</h1>
				<div class="divider"></div>
			</div>

			<div class="no-box-content-color">

				<ul class="ul-info">
					<li class="li-info">
						<div class="label">Name:</div>
						<div class="data">{{account.user.name}}</div>
					</li>
					<li class="li-info">
						<div class="label">Login:</div>
						<div class="data">{{account.user.login}}</div>
					</li>
					<li class="li-info" ng-if="account.user.phone">
						<div class="label">Phone:</div>
						<div class="data">{{account.user.phone | formatPhone}}</div>
					</li>
					<li class="li-info" ng-if="account.user.email">
						<div class="label">Email:</div>
						<div class="data">{{account.user.email}}</div>
					</li>
					<li class="li-info" ng-if="account.user.timezone">
						<div class="label">Timezone:</div>
						<div class="data">{{account.user.timezone}}</div>
					</li>
				</ul>
				
			</div>
		</div>
		
		<div class="support-box-wrap box-content2" ng-if="account.user.invite_code">
			<div class="support-box-wrap-header">
				<h1><i class="fa fa-thumbs-up"></i>Referal</h1>
				<div class="divider"></div>
			</div>
			<div class="no-box-content-color">
				<br>
				<div ng-include="'assets/view/general-profile-referal.html'"></div>
			</div>
		</div>
		
		<div class="support-box-wrap box-content2" ng-if="account.user.permissions.GLOBAL">
			<div class="support-box-wrap-header">
				<h1><i class="fa fa-cog"></i>Config</h1>
				<div class="divider"></div>
			</div>

			<div class="tb-info no-box-content-color">
				<div profile-preference class="tb-info-item" content="Notify on all support tickets" type="bool" key="notification-desktop-support-all"></div>
				<div profile-preference class="tb-info-item" content="Display demo orders" type="bool" key="demo"></div>
			</div>
		</div>
		
		<div ng-if="account.isDriver">

			<a href="/drivers/welcome"><button class="button button-small-green">Run setup</button></a>

		</div>



</div>
