<div class="top-pad"></div>

<div class="content-padding">
	<h1 class="title"><i class="fa fa-users"></i>Staff<div class="title-loader" ng-if="loading"><i class="fa fa-refresh fa-spin"></i></div></h1>
	<div class="box-content2 box-content-table">
		<table>
			<tr>
				<td colspan="6"><i class="fa fa-search"></i>&nbsp;&nbsp;<input type="text" ng-model="query.search" id="search" tabindex="1"></td>
			</tr>

			<tr>
				<th>Type</th>
				<td>
					<select ng-model="query.type" name="searchType" tabindex="2">
						<option value="all">All</option>
						<option value="driver">Drivers</option>
					</select>
				</td>
				<th>Status</th>
				<td>
					<select ng-model="query.status" name="searchType" tabindex="3">
						<option value="all">All</option>
						<option value="active">Active</option>
						<option value="inactive">Inactive</option>
					</select>
				</td>
				<th>Working</th>
				<td>
					<select ng-model="query.working" name="searchType" tabindex="4">
						<option value="all">All</option>
						<option value="yes">Yes</option>
						<option value="no">No</option>
					</select>
				</td>
			</tr>
		</table>
	</div>
	
	<div class="bar-loader bar-loader-search" ng-class="{'bar-loader-loading': loading}"></div>

	<ng-include src="'assets/view/listview-staff.html'"></ng-include>
	<ng-include src="'assets/view/listview-paging.html'"></ng-include>
</div>