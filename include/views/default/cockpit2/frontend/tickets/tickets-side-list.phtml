<div class="tickets-side-list">
	<div ng-controller="SideTicketsCtrl">
		<div ng-if="account.user.permissions.GLOBAL">
			<h1>Tickets</h1>
			<a class="support-side-header-closed-tickets" href="/tickets">View all tickets</a>
			<div class="divider"></div>
			<div class="tickets-side-tickets">
				<div ng-repeat="ticket in tickets" ng-if="ticket.status == 'open'" class="tickets-side-item" ng-class="{'tickets-side-item-unread': ( ticket.recent_from == 'Client' || ticket.recent_from == 'auto-reply' || ticket.recent_from_type == 'warning' ), 'tickets-side-item-read': ( ticket.recent_from != 'Client' && ticket.recent_from != 'auto-reply' )}">

					<div class="tickets-side-tickets-wrap">
						<i class="fa fa-times-circle-o close-ticket" title="Close issue" ng-click="closeTicket( ticket.id_support )"></i>
						<div ng-click="loadTicket( ticket.id_support )">
							<a class="tickets-side-ticket" href="/ticket/{{ticket.id_support}}" eat-click>
								<span ng-if="(ticket.recent_type == 'warning' || ticket.type == 'WARNING') && ticket.recent_from != 'Client'">
									<i>System</i>
								</span>
								<span ng-if="(ticket.recent_type == 'warning' || ticket.type == 'WARNING') && ticket.recent_from == 'Client'">
									<span ng-if="ticket.customer_name">{{ticket.customer_name}}</span>
									<span ng-if="!ticket.customer_name && ticket.client_admin_name">{{ticket.client_admin_name}}</span>
									<span ng-if="!ticket.customer_name && !ticket.client_admin_name">Unknown</span>
								</span>
								<span ng-if="ticket.type != 'WARNING'">{{ticket.customer_name || ticket.client_admin_name}}</span>
							</a>
							<span class="tickets-side-time">{{ticket.recent_timestamp * 1000 | date:'EEE MM/dd @ h:mm a'}}</span>
							<div class="divider"></div>
							<br>
							<span class="tickets-side-message" ng-class="{ 'text-danger': ( ticket.recent_from == 'Client' || ticket.recent_from == 'auto-reply' || ticket.recent_from_type == 'warning' || ticket.type == 'WARNING' ), 'text-muted': (ticket.recent_from != 'Client') }">
								{{ticket.message_recent}}
							</span>

							<div ng-if="ticket.media" ng-repeat="image in ticket.media">
								<img ng-if="image" class="support-side-image" src="{{image}}">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div ng-if="!account.user.permissions.GLOBAL">
			<br>
			<p>To contact Crunchbutton support, please text <br><br><a href ng-click="callText('16467831444')">(646) 783-1444</a></p>
		</div>
	</div>
</div>
