<div ng-show="!orders.list">
	<!-- Orders loader -->
</div>
<div ng-show="orders.list" class="main-content-readable">

	<div class="restaurant-item-title">PAST ORDERS</div>

	<ul class="resturant-dishes resturant-dish-container your-orders">
		<li ng-repeat="order in orders.list">
			<span ng-click="orders.restaurant(order._restaurant_permalink)" class="dish-name order-restaurant">
				{{order._restaurant_name}}
			</span>
			<span class="dish-price">
				{{order.timeFormat}} ({{order._tz}})
			</span>
			<a ng-click="orders.receipt(order.id)" class="order-link" href="javascript:;">View Receipt</a>
			<div class="divider"></div>		
		</li>
	</ul>

	<div>
		<div class="invite-code-container field-container" ng-show="referral.enabled">
			<div class="restaurant-item-title">Crunch Credit Invites</div>
			<p>
				For every NEW friend who orders food, we'll award you Crunch Credit.
				<br/>
				You have {{referral.limit - referral.invites}} invite{{referral.limit - referral.invites == 1 | iif : '' : 's'}} remaining.
			</p>

			<div class="social-button twitter-button social-button-invite" ng-click="referral.twitter();">
				<i class="icon-twitter"></i><span class="social-button-text">Tweet</span>
			</div>
			<div class="social-button facebook-button social-button-invite" ng-click="referral.facebook();">
				<i class="icon-facebook"></i><span class="social-button-text">Share</span>
			</div>
			<div class="divider"></div>
			Invite URL: <input type="text" ng-click-select-all value="{{referral.invite_url.replace('http://','')}}" readonly="readonly" />
			
			<div class="divider"></div>
		</div>
	</div>

	<div class="order-options">
		<a ng-show="!account.hasFacebook" href="javascript:;" ng-click="facebook()" class="signup-add-facebook-button" >Connect with Facebook</a>
		<a href="javascript:;" ng-click="signout()" class="signout-button">Sign out</a>
		<div class="divider"></div>
	</div>
</div>