					<div ng-show="!account.user">
						<button ng-click="modal.signupOpen()" class="home-recommend-button"><div>Create an account</div></button>
						<span class="home-reccomend-message-content">and we'll let you know when we launch in your area!</span>
					</div>
				</div>
			</div>
			<div class="divider"></div>
		</div>
	</div>
	
	<div class="divider dots"></div>
	
	<div class="main-content-readable content-item-locations">
		<div class="home-welcome">
			<h1>Our popular cities</h1> 
			<h2>Take a look at some of of the best delivery food in these cities.</h2>
			<div class="content-item-locations-cities">
				<span ng-repeat="alias in topCommunities">
					<span class="content-item-locations-city" ng-click="openCity(alias.alias)" permalink="{{alias.alias}}">{{alias.name}}</span>
				</span>
			</div>
		</div>
	</div>
