	<!--form goes here-->
	<form>

		<div class="form-group">
			<h4><span class="form-required">*</span> First Name:</h4>

			<div class="textbox">
				<div ng-if="errors.firstName">Please enter your first name:</div>
				<input type="text" ng-model="apply.firstName" name="firstName" class="form-control form-control-large">
			</div>
		</div>

		<div class="form-group">
			<h4><span class="form-required">*</span> Last Name:</h4>
			
			<div class="textbox">
				<div ng-if="errors.lastName">Please enter your last name:</div>
				<input type="text" ng-model="apply.lastName" name="lastName" class="form-control form-control-large" >
			</div>
		</div>

		<div class="form-group">
			<h4><span class="form-required">*</span> Email:</h4>
			
			<div class="textbox">
				<div ng-if="errors.email">Please enter your email:</div>
				<input type="text" class="form-control form-control-large" ng-model="apply.email" name="email" >
			</div>
		</div>

		<div class="form-group">
			<h4><span class="form-required">*</span> What school are you near?</h4>
			
			<div class="textbox">
				<div ng-if="errors.university">Please enter your nearest school:</div>
				<select class="form-control form-control-large form-control form-control-large-select" ng-model="apply.university" name="university" >
