<div ng-show="order.id">

	<div class="content-padder-before"></div>

	<div class="order-info content-padder main-content-readable">
	
		<span class="order-thanks-message" ng-show="order.new">
			Crunched!&nbsp;
			<span class="order-thanks-message-block">Your order is placed</span>
			<span class="order-thanks-message-small">(and saved for easy 1 click ordering next time)</span>
		</span>

		<div ng-show="account.user">
			You can one click order anywhere, including <a data-ng-href="http://crunchbutton.com">crunchbutton.com</a> on your phone.
		</div>

		<div ng-show="!account.user.has_auth">
				Add a password to reorder your favorite food anywhere, including <a data-ng-href="http://crunchbutton.com">crunchbutton.com</a> on your phone.
				<a href="javascript:;" ng-click="modal.signupOpen();" class="add-password-button">Create an account</a>
		</div>
	
		<div class="order-invite-code field-container" ng-show="order.new && referral.invite_url && referral.enabled">
			<h4>Invite Code</h4>
			Earn Crunch Credit for every new friend who orders with this link!
			<input type="text" style="margin:10px;" ng-click-select-all value="{{referral.invite_url.replace('http://','')}}" readonly="readonly" />
		</div>

		<div class="order-details">

			<div ng-show="(order.delivery_type == 'delivery')">
				<b>Your delivery address:</b><br><span ng-bind-html-unsafe="order.address | nl2br"></span><br><br>
			</div>
	
			<div ng-hide="(order.delivery_type == 'delivery')">
				<b>Takeout order</b><br><br>
			</div>
	
			<b>Your phone #:</b><br>{{ order.phone | formatPhone }}<br><br>
	
			<b>Your order:</b><span ng-bind-html-unsafe="order._message"></span><br><br>
	
			<i ng-show="order.notes" ng-bind-html-unsafe="order.notes | nl2br"></i><br><br>
	
			<b ng-show="(order.pay_type == 'card')">Your total:<br></b>
			<b ng-hide="(order.pay_type == 'card')">Your approximate total:<br></b>
			
			${{order.charged | formatPrice}}
	
			<div class="credit" ng-show="(order.credit && order.credit > 0)">( ${{order._final_price}} - ${{order._credit}} credit )</div>
	
			<br><br>
	
			For updates on your order, please call
			<div>
				{{order._restaurant_name}}: 
				<b>
					<span ng-show="restaurant.phone">
						<span ng-show="isMobile"><a href="tel:{{restaurant.phone}}">{{ restaurant.phone }}</a></span>
						<span ng-show="!isMobile">{{ restaurant.phone }}</span>
					</span>
					<span ng-show="!restaurant.phone">
						<i class="icon-spinner icon-spin"></i>
					</span>
				</b>
			</div>

			<br><br>

			You can reach Crunchbutton by texting or calling <b> 
			<span ng-show="isMobile"><a href="tel:(646) 783-1444">{{ '6467831444' | formatPhone }}</a></span>
			<span ng-show="!isMobile">{{ '6467831444' | formatPhone }}</span>
			</b> <br><br>
	
			We've saved your order for easy 1 click ordering next time

			<br><br>

			<div class="facebook-button facebook-button-share clearfix" ng-click="facebook();">
				<i class="icon-facebook"></i><span class="facebook-button-text">Share what you ordered</span>
				<div class="divider"></div>
			</div>
	
		</div>
	</div>
	
	<br>
	
