<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script>

var FBAPP = {};
FBAPP.processStatus = function(session) {
	if (session.status === 'connected' && session.authResponse) {
	
		$('.login').hide();
		$('.logout').show();

		FB.api('/me', { fields: 'name, picture' }, function(response) {
			if (response.error) {
				console.log('some sort of error');
				return;
			}

			// user is logged in
			$('.user-name').html(response.name);
			$('.user-image').attr('src', response.picture.data ? response.picture.data.url : response.picture);
			$('.user').show();

			// now we double check with the server what our logged in user is. the php will handle the rest
			$.getJSON('/api/user',function(json) {
				$('.user-id').html(json.id + ' - ' + json.uuid);
			});
		});

	} else {
		$('.user').hide();
		$('.login').show();
		$('.logout').hide();
	}
};

FBAPP.login = function() {
	FB.login(FBAPP.processStatus,{scope:'email'});
};

FBAPP.FBlogout = function() {
	FB.logout();
};

FBAPP.logout = function() {
	FB.logout(FBAPP.localLogout);
};

FBAPP.localLogout = function() {
	$.getJSON('/api/logout',function(json) {
		FBAPP.processStatus({})
	});
};

$(function() {
	$('.login, .logout, .user').hide();

	window.fbAsyncInit = function() {
		FB.init({
			appId: '<?=Cana::config()->facebook->app?>',
			cookie: true,
			xfbml: true,
			oauth: true
		});

		FB.getLoginStatus(FBAPP.processStatus);					
		FB.Event.subscribe('auth.statusChange', FBAPP.processStatus);
	};

	(function() {
		var e = document.createElement('script'); e.async = true;
		e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
		document.getElementById('fb-root').appendChild(e);
	}());

});
</script>

<a href="javascript: FBAPP.login();" class="login">login</a>
<a href="javascript: FBAPP.logout();" class="logout">logout</a>
<a href="javascript: FBAPP.FBlogout();" class="logout">fb-logout-only</a>
<a href="javascript: FBAPP.localLogout();" class="logout">local-logout-only</a>

<div class="user">
	<img class="user-image"></img>
	<div class="user-name"></div>
	<div class="user-id"></div>
</div>

<div id="fb-root"></div>