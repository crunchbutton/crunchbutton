<meta property="og:title" content="♥ Crunchbutton, Like us!!! ♥"/>
<meta property="og:description" content="Like crunchbutton on facebook! Because we like YOU!"/>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
<script type="text/javascript" src="/assets/js/jquery.cookie.js"></script>
<script type="text/javascript" src="/assets/js/confetti.js"></script>

</head>
<body>
<div class="content"><?=$this->content?></div>
<div id="background" class="noselect"></div>
<div id="fb-root"></div>
<script>
	var confetti;
	window.fbAsyncInit = function() {
		FB.init({
			appId      : '411729638889643',
			status     : true,
			cookie     : true,
			xfbml      : true,
			version    : 'v2.2'
		});

		FB.Event.subscribe('edge.create', function(response) {
			$.cookie('liked', '1', { expires: new Date(3000,01,01), path: '/'});
			confetti.start();
			$('#audio').get(0).play();
		});
	};
	(function(d){
		var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
		if (d.getElementById(id)) {return;}
		js = d.createElement('script'); js.id = id; js.async = true;
		js.src = "//connect.facebook.com/en_US/sdk.js";
		ref.parentNode.insertBefore(js, ref);
	}(document));
	
	$(document).ready(function () {
		if ($.cookie('liked')) {
			confetti.start();
			$('#audio').get(0).play();
		}
	});
</script>
</body>
</html>